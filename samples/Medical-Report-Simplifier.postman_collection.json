				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"type\": \"text\",\n  \"text\": \"CBC: Hemoglobin 10.2 g/dL (Low), WBC 11,200 /uL (High)\"\n}"
